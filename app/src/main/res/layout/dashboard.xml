<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABF291"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:text="Home"
            android:textSize="36dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:src="@drawable/img2" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F5F6FE"
        app:cardCornerRadius="35dp">


        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Welcome Back"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView

            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="100dp"
                android:text="Numer of\nCustomers"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ABF291"

                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="28"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="180dp"
            android:text="Sales Histroy"
            android:textSize="17dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="584dp"
            android:background="@drawable/bg_view2" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/qr"
            android:layout_marginStart="340dp"
            android:layout_marginTop="510dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="570dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/home" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/noteoad" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/remove" />


            <ImageView
                android:layout_width="46dp"
                android:layout_height="49dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="630dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Home"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Reports"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Services"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Add Customer"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="182dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img3"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:text="12"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="85dp"
                    android:text="Server"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-25dp"
                        android:src="@drawable/client1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:text="20"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="85dp"
                    android:text="Client"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="122dp"
            android:layout_height="30dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            android:text="Product Request"
            android:textSize="16dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="185dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="30dp"
                        android:text="Client"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/img5" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:src="@drawable/client1" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img3"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Server"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/img5" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
